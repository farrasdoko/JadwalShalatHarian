<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:weightSum="2"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_tanggal"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Date For 2018-8-29"
        android:textSize="18sp"
        android:textAlignment="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:layout_weight="1"
            android:id="@+id/tv_judul_shubuh_adapter"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Shubuh"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="#fff"/>
        <TextView
            android:layout_weight="1"
            android:id="@+id/tv_info_shubuh_adapter"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="4:35 pm"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textColor="#fff"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

    <TextView
        android:layout_weight="1"
        android:id="@+id/tv_judul_dzuhur_adapter"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Dzuhur"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="#fff"/>
    <TextView
        android:layout_weight="1"
        android:id="@+id/tv_info_dzuhur_adapter"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="4:35 pm"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textColor="#fff"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:layout_weight="1"
            android:id="@+id/tv_judul_ashar_adapter"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Ashar"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="#fff"/>
        <TextView
            android:layout_weight="1"
            android:id="@+id/tv_info_ashar_adapter"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="4:35 pm"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textColor="#fff"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:layout_weight="1"
            android:id="@+id/tv_judul_maghrib_adapter"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Maghrib"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="#fff"/>
        <TextView
            android:layout_weight="1"
            android:id="@+id/tv_info_maghrib_adapter"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="4:35 pm"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textColor="#fff"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:layout_weight="1"
            android:id="@+id/tv_judul_isya_adapter"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Isya"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="#fff"/>
        <TextView
            android:layout_weight="1"
            android:id="@+id/tv_info_isya_adapter"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="4:35 pm"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textColor="#fff"/>

    </LinearLayout>

</LinearLayout>